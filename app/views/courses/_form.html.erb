<%= form_for(@course) do |f| %>
  <% if @course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
      <% @course.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div id="step_1">
  <div class="field">
    <%= f.label :topic, 'I want to learn...' %><br />
    <%= f.text_field :topic %>
  </div>
  
  <%= link_to_function 'continue >>', "$('#step_1').hide(); $('#step_2').show();"%>
</div>

<div id="step_2">
  <div class="field">
    <%= f.label :teachers_email %><br />
    <%= f.text_field :teachers_email %>
  </div>

<%= link_to_function 'continue >>', "$('#step_2').hide(); $('#step_7').show();"%>
</div>

<div id="step_3">
  <div class="field">
    <%= f.label :start_time %><br />
    <%= f.datetime_select :start_time %>
  </div>
</div>

<div id="step_4">
  <div class="field">
    <%= f.label :end_time %><br />
    <%= f.datetime_select :end_time %>
  </div>
</div>

<div id="step_5">
  <div class="field">
    <%= f.label :student_email %><br />
    <%= f.text_area :student_email %>
  </div>
</div>

<div id="step_6">
  <div class="field">
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </div>
</div>

<div id="step_7">
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
</div>
<% end %>


<script type="text/javascript">
	$(document).ready(function() {
    $('#step_2, #step_3, #step_4, #step_5, #step_6, #step_7').hide();
	});
</script>